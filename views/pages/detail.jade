extends ../layout

block content
  .container
    .row
      each item in movies
        .col-md-7
          embed(src="#{movie.flash}", allowFullscreen="true", quality="high", width="720", height="600", align="center",type="application/x-shockwave-flash")
        .col-md-5
          .dl-horizantal
            dt 电影名字
            dd= movie.title  
            dt 导演
            dd= movie.doctor  
            dt 国家
            dd= movie.country  
            dt 语言
            dd= movie.language
            dt 上映年份
            dd= movie.year
            dt 简介
            dd= movie.summary      